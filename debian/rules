#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh ${@} --parallel

override_dh_auto_configure:
	./autogen.sh --with-gtk=3
	dh_auto_configure -- --with-gtk=3

override_dh_auto_install:
	$(MAKE) DESTDIR=$(CURDIR)/debian/pcmanfm-semplice install

override_dh_builddeb:
	dh_builddeb -- -Zxz -z9

override_dh_strip:
	dh_strip --dbg-package=pcmanfm-semplice-dbg

override_dh_installdocs:
	dh_installdocs --link-doc=pcmanfm-semplice
